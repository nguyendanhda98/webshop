extends ../index.pug

block body 

    if message 
        .alert.alert-danger(role='alert')
            | #{message}
    form(action="/login", method="POST")
        .mb-3
            label.form-label(for='exampleInputEmail1') Email address
            input#exampleInputEmail1.form-control(name='email' type='email' aria-describedby='emailHelp' value= email ? email : "")
        .mb-3
            label.form-label(for='exampleInputPassword1') Password
            input#exampleInputPassword1.form-control(name='password' type='password')
        button.btn.btn-primary(type='submit') Login  